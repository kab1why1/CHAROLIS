@model charolis.Entities.Product

@{
    ViewData["Title"] = "Редагувати товар";
}

<h2>Редагувати товар</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <select asp-for="IsAvailable" class="form-control">
            <option value="true">В наявності</option>
            <option value="false">Немає в наявності</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
</form>