@model charolis.Models.CartViewModel

@{
    ViewData["Title"] = "Кошик";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <strong>Поточний баланс: </strong> @Model.Balance.ToString("C")
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>№</th>
            <th>Дата створення</th>
            <th>Сума</th>
            <th>Статус оплати</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Orders.Any())
    {
        @for (int i = 0; i < Model.Orders.Count; i++)
        {
            var order = Model.Orders[i];
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                <td>@order.Total.ToString("C")</td>
                <td>
                    @if (order.IsPaid)
                    {
                        <span class="badge bg-success">Оплачено</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Не оплачено</span>
                    }
                </td>
                <td>
                    <!-- Кнопка для модального вікна -->
                    <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#orderDetailsModal-@order.Id">
                        Деталі
                    </button>
                </td>
            </tr>

            <!-- Модальне вікно для деталей замовлення -->
            <div class="modal fade" id="orderDetailsModal-@order.Id" tabindex="-1" aria-labelledby="orderDetailsLabel-@order.Id" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="orderDetailsLabel-@order.Id">Замовлення №@order.Id</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Дата створення:</strong> @order.CreatedAt.ToLocalTime().ToString("g")</p>
                            <p><strong>Статус:</strong>
                                @if (order.IsPaid)
                                {
                                    <span class="badge bg-success">Оплачено</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Не оплачено</span>
                                }
                            </p>

                            <h6>Список товарів:</h6>
                            <ul>
                                @foreach (var item in order.Items)
                                {
                                    <li>
                                        @item.Product.Name — @item.Quantity шт. × @item.Product.Price.ToString("C")
                                    </li>
                                }
                            </ul>

                            <p><strong>Загальна сума:</strong> @order.Total.ToString("C")</p>

                            <div class="mt-3">
                                @if (!order.IsPaid)
                                {
                                    <form asp-action="Pay" method="post" class="d-inline">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <button type="submit" class="btn btn-success">Оплатити</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="CancelPayment" method="post" class="d-inline">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <button type="submit" class="btn btn-warning">Скасувати оплату</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">Кошик порожній.</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
