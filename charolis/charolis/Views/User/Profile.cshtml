@model charolis.Entities.User
@{
    ViewData["Title"] = "Профіль користувача";
}

@if (Model == null)
{
    <p>Користувача не знайдено.</p>
}
else
{
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <strong>Логін:</strong> @Model.Username
    </div>
    <div class="mb-3">
        <strong>Email:</strong> @Model.Email
    </div>
    <div class="mb-3">
        <strong>Телефон:</strong> @Model.PhoneNumber
    </div>
    <div class="mb-3">
        <strong>Адреса:</strong> @Model.Address
    </div>
    <div class="mb-3">
        <strong>Баланс:</strong> @Model.Balance.ToString("C")
    </div>
    <div class="mb-3">
        <strong>Роль:</strong> @Model.Role
    </div>

    <a asp-action="Edit" class="btn btn-primary">Редагувати профіль</a>
}